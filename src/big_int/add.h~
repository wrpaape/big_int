inline void add_big_ints(struct BigInt *result,
			 struct BigInt *big1,
			 struct BigInt *big2)
{
	/* ensure big1->word_count >= big2->word_count
	 * ================================================================== */

	if (big2->word_count > big1->word_count) {
		struct
	}
	switch (big1->sign) {
	case POS:

		switch (/* variable */) {
		case POS:
			return add_big_ints_same_sign(result, big1, big2);

		case NEG:
		default:
		}

	case NEG:
	default:
	}

	/* ensure big1->word_count >= big2->word_count
	 * ================================================================== */
}

inline void add_big_ints_same_sign(struct BigInt *result,
				   struct BigInt *big1,
				   struct BigInt *big2)
{
}

