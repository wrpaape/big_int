#include "big_int_globals.h"
#include "big_int_memory.h"
#include "big_int_utils.h"
#include "big_int_mult.h"
#include "big_int_add.h"

/* EXTERNAL DEPENDENCIES ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ */



/* CONSTANTS ▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼ */
/* CONSTANTS ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ */



/* FUNCTION-LIKE MACROS ▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼ */

/* FUNCTION-LIKE MACROS ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ */



/* TOP-LEVEL FUNCTION DEFINITIONS ▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼ */

void add_big_ints(struct BigInt *result,
		  struct BigInt *big1,
		  struct BigInt *big2)
{
	/* ensure big1 >= big2
	 * ================================================================== */
	switch (compare_big_ints(big1, big2)) {

	case NEG:
		/* big1 < big1, swap pointers and fall through
		 * ========================================================== */
		VAR_SWAP(big1, big2);

	case POS:
		/* big1 > big2, break
		 * ========================================================== */
		break;

	default:
		/* big1 == big2
		 *
		 *  → big1 + big2
		 *  = 2big1
		 *  = arithmetic shift left by 1 on big1
		 *
		 *  delegate addition to more efficient bitwise operation
		 * ========================================================== */
		big_int_ash_left(result, big1, 1lu);
		return;
	}

	const size_t big1_num_words = big1->num_words;
	const size_t required	    = big1_num_words + 1lu;

	if (result->num_alloc < required)
		expand_big_int(result, required);

	result->sign = big1->sign;

	if (big2->sign == ZRO) {
		result->num_words = big1_num_words;
		memcpy(result->words,
		       big1->words,
		       sizeof(word_t) * big1_num_words);
		return;
	}
}

/* TOP-LEVEL FUNCTION DEFINITIONS ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ */



/* HELPER FUNCTION DEFINITIONS ▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼▼ */
/* HELPER FUNCTION DEFINITIONS ▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲▲ */
